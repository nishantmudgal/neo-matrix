{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["DOM", "ES2019"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@neomatrix/tokens": ["packages/tokens/src"],
      "@neomatrix/tokens/*": ["packages/tokens/src/*"],
      "@neomatrix/theme": ["packages/theme/src"],
      "@neomatrix/theme/*": ["packages/theme/src/*"],
      "@neomatrix/ui": ["packages/ui/src"],
      "@neomatrix/ui/*": ["packages/ui/src/*"],
    }
  }
}
